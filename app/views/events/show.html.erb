<p id="notice"><%= notice%></p>

<p>
	<b>Name:</b>
	<%= @event.name %>
</p>
<p>
	<b>Location:</b>
	<%= @event.location%>
</p>
<p>
	<b>Description:</b>
	<%= @event.description %>
</p>
<p>
	<b>Type:</b>
	<%= @event.event_type %>
</p>

<table id="houses_attending">
	<th>Houses Attending</th>
	<tr>
		<th>Name</th>
	</tr>
	<% @event.houses.each do |house| %>
	<tr>
		<td><%= link_to house.name, house %></td>
	</tr>
	<%end%>
</table>
<%= form_for @event, :remote => :true do |f| %>
	<%= f.label :house_id, "House" %><br />
		<%= f.select :house_id, options_from_collection_for_select(House.all, :id, :name) %><br />
		<%=f.submit "Add House To Event" %>
		<%end%>
